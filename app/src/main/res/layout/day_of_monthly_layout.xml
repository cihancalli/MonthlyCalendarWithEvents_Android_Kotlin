<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dayOfMonthLayoutContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/m_2"
        android:background="@drawable/mc_day_back_selected">

        <TextView
            android:id="@+id/dayOfMonthDayTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/m_14"
            android:layout_marginTop="@dimen/m_10"
            android:layout_marginEnd="@dimen/m_14"
            android:layout_marginBottom="@dimen/m_15"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:maxLines="1"
            android:text="10"
            android:textColor="@color/white"
            android:textSize="@dimen/ts_16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/dayOfMonthDayEventImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/m_5"
            android:src="@drawable/mc_status_selected"
            app:layout_constraintEnd_toEndOf="@+id/dayOfMonthDayTextView"
            app:layout_constraintStart_toStartOf="@+id/dayOfMonthDayTextView"
            app:layout_constraintTop_toBottomOf="@+id/dayOfMonthDayTextView" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>